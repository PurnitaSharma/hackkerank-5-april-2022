#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
 int n;
    scanf("%d",&n);
    int a[n];
    for(int i=0;i<n;i++)
        scanf("%d",&a[i]);
    int max=0,ans=0;
    for(int i=0;i<n;i++)
    {   int j=i-1;
        while(j>=0)
        {
            if(a[j]>a[i] && a[j]>max)
            {
                max=a[j];
               // printf("k%d   ",max);
            }
            j=j-1;
        }
        if(max>a[i])
        {
            ans+=max-a[i];
        //printf("%dt   ",ans);
        }
        else
           
        {ans+=0;
         //printf("i%d    ",ans);
        }
    }
    printf("%d\n",ans);   
    return 0;
}
